{
  "manifest_version": 2,
  "name": "URL Tracking Stripper",
  "short_name": "URL Tracking Stripper",
  "version": "2.0.0",
  "description": "Removes tracking tokens and tracking parameters from URLs to keep them short and clean for sharing, bookmarking, etc. UTM and others. Also can skip known redirects from Google Search results. Fast and customizable for desired speed and privacy.",
  "homepage_url": "https://github.com/newhouse/url-tracking-stripper",
  "icons": {
    "128": "icon-128.png",
    "48": "icon-48.png"
  },
  "background": {
    "scripts": [
      "trackers.js",
      "consts.js",
      "common.js",
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "page_action": {
    "default_title": "Nothing stripped on this page.",
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png",
      "48": "icon-48.png"
    }
  }
}