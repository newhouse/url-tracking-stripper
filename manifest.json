{
   "manifest_version": 2,
   "name": "URL Tracking Stripper",
   "short_name": "URL Tracking Stripper",
   "version": "0.0.1",
   "description": "Will remove the tracking parameters from URLs to keep them short and cleaner for sharing, bookmarking, etc.",
   "homepage_url": "https://github.com/newhouse/url-tracking-stripper",
   "icons": {
      "128": "icon-128.png",
      "48": "icon-48.png"
   },
   "background": {
      "scripts": [ "background.js" ]
   },
   "permissions": [
	  "tabs",
	  "http://*/*",
	  "https://*/*"
   ]
}
