{
  "manifest_version": 2,
  "name": "URL Tracking Stripper",
  "short_name": "URL Tracking Stripper",
  "version": "1.5",
  "description": "Removes tracking tokens from URLs to keep them short and clean for sharing, bookmarking, etc. UTM and others. Fast and customizable.",
  "homepage_url": "https://github.com/newhouse/url-tracking-stripper",
  "icons": {
    "128": "icon-128.png",
    "48": "icon-48.png"
  },
  "background": {
    "scripts": [
      "trackers.js",
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "page_action": {
    "default_title": "Nothing stripped on this page.",
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png",
      "48": "icon-48.png"
    }
  }
}